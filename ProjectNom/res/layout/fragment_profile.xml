<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageViewProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible" 
        android:layout_alignParentLeft="True"
        android:layout_alignParentTop="true"
        android:paddingLeft="10dp"
        android:paddingTop="10dp" />
    <TextView
        android:id="@+id/profileUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageViewProfile"
        android:layout_alignParentRight="true"
        android:paddingLeft="10dp" 
        android:paddingTop="10dp"
        android:textSize="20sp"/>    
 	<!--  <fragment android:name="com.facebook.widget.UserSettingsFragment"
          android:id="@+id/userSettingsFragment"
          android:layout_width="match_parent"
          android:layout_height="match_parent" />
          -->

<!-- Gallery horizontal slide view -->

	<TextView
	    android:id="@+id/picturesText"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="Your Pictures"
	    android:layout_below="@id/imageViewProfile" />
   <HorizontalScrollView 
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/horizontal_scrollview" 
        android:fadingEdge="none"
        android:paddingTop="10dp"
        android:layout_below="@id/picturesText" >
        	<LinearLayout 
        	    android:id="@+id/horizontal_outer_layout"
        	    android:layout_height="fill_parent"
        	    android:layout_width="wrap_content"
        	    android:orientation="horizontal"
        	    android:paddingLeft="5dp"
        	    android:paddingRight="5dp">
        	</LinearLayout>
    </HorizontalScrollView>

   	<TextView
	    android:id="@+id/bookmarksText"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="Your Bookmarks"
	    android:layout_below="@id/horizontal_scrollview" />
    <HorizontalScrollView 
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/horizontal_scrollview2" 
        android:fadingEdge="none" 
        android:paddingTop="10dp"
        android:layout_below="@id/bookmarksText">
        	<LinearLayout 
        	    android:id="@+id/horizontal_outer_layout2"
        	    android:layout_height="fill_parent"
        	    android:layout_width="wrap_content"
        	    android:orientation="horizontal"
        	    android:paddingLeft="5dp">
        	</LinearLayout>
    </HorizontalScrollView>
    
    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:onClick="onClickLogout" 
        android:layout_alignParentBottom="true"
        android:layout_below="@id/horizontal_scrollview2"/>
    
   
</RelativeLayout>