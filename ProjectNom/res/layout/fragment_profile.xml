<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageViewProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible" 
        android:layout_alignParentLeft="True"
        android:layout_alignParentTop="true"
        android:paddingLeft="10dp"
        android:paddingTop="10dp" />
    <TextView
        android:id="@+id/profileUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageViewProfile"
        android:layout_alignParentRight="true"
        android:paddingLeft="10dp" 
        android:paddingTop="10dp"
        android:textSize="20sp"/>    
 	<!--  <fragment android:name="com.facebook.widget.UserSettingsFragment"
          android:id="@+id/userSettingsFragment"
          android:layout_width="match_parent"
          android:layout_height="match_parent" />
          -->

<!-- Gallery horizontal slide view -->
   <HorizontalScrollView 
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/horizontal_scrollview" 
        android:fadingEdge="none"
        android:paddingTop="10dp"
        android:layout_below="@id/imageViewProfile" >
        	<LinearLayout 
        	    android:id="@+id/horizontal_outer_layout"
        	    android:layout_height="fill_parent"
        	    android:layout_width="wrap_content"
        	    android:orientation="horizontal"
        	    android:paddingLeft="5dp">
        	</LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView 
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/horizontal_scrollview2" 
        android:fadingEdge="none" 
        android:paddingTop="10dp"
        android:layout_below="@id/horizontal_scrollview">
        	<LinearLayout 
        	    android:id="@+id/horizontal_outer_layout2"
        	    android:layout_height="fill_parent"
        	    android:layout_width="wrap_content"
        	    android:orientation="horizontal"
        	    android:paddingLeft="5dp">
        	</LinearLayout>
    </HorizontalScrollView>
    
    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:onClick="onClickLogout" 
        android:layout_alignParentBottom="true"/>
    
    <!-- Facebook test stuff --> 
    <Button 
        android:id="@+id/facebookTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit to Facebook"
        android:layout_marginTop="44dp" />
    <TextView 
        android:id="@+id/facebookDebugBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Facebook goes here"
        android:layout_marginTop="88dp"
        android:textSize="20dp" />

    
</RelativeLayout>