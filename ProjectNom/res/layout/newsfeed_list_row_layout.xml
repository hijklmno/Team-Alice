<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="50dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/NewsFeedCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_alignParentTop="true"
        android:textColor="@color/black"
        android:typeface="sans"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/NewsFeedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/NewsFeedCaption"
        android:layout_alignParentTop="true"
        android:text=""
        android:gravity="right"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:typeface="sans"
        android:textSize="18sp" />

    <TextView 
        android:id="@+id/NewsFeedsubCaption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/NewsFeedCaption"
        android:text=""
        android:textColor="@color/black"
        android:typeface="sans"
        android:textSize="18sp" />

     <ImageView
        android:id="@+id/NewsFeedThumbImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/NewsFeedCaption"
        android:background="@drawable/list_placeholder" />

     <TextView 
         android:id="@+id/NewsFeedName"
         android:tag=""
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@id/NewsFeedThumbImage"
         android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/NewsFeedNOM"
        android:tag=""
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/NewsFeedName"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text=""
        android:drawableStart="@drawable/ic_action_like" />

    <Button
        android:id="@+id/NewsFeedMmm"
        android:tag=""
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/NewsFeedName"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/NewsFeedNOM"
        android:text=""
        android:drawableStart="@drawable/ic_action_important" />

    <Button 
        android:id="@+id/NewsFeedReport"
        android:tag=""
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/NewsFeedName"
        android:text=""
        android:layout_alignBottom="@id/NewsFeedMmm"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:drawableEnd="@drawable/ic_action_error"
        android:textSize="18sp" />

</RelativeLayout>